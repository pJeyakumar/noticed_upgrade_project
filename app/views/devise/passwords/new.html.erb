<div class="centered-form">
  <h2>Forgot your password?</h2>

  <%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an email.
      </div>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <%= form.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= link_to "Log in", new_user_session_path, class: "btn btn-link" %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-link" %>
  </div>
</div>
