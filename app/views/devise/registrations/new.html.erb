<div class="centered-form">
  <h2>Sign up</h2>

  <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an email.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an first_name.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an last_name.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, autofocus: true, autocomplete: "title", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an last_name.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide a password.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :password_confirmation, class: "form-label" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please confirm your password.
      </div>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <%= form.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= link_to "Log in", new_user_session_path, class: "btn btn-link" %>
    <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link" %>
  </div>
</div>
