<div class="centered-form">
  <h2>Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, novalidate: true) do |form| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.email_field :email, autofocus: true, autocomplete: "email", required: true, label: "Email" %>    
    </div>

    <div class="mb-3">
      <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, label: "First Name" %>      
    </div>

    <div class="mb-3">
      <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true, label: "Last Name" %>      
    </div>

    <div class="mb-3">
      <%= form.text_field :title, autofocus: true, autocomplete: "title", required: true, label: "Title" %>      
    </div>

    <div class="mb-3">
      <%= form.password_field :password, autocomplete: "new-password", required: true, label: "Password" %>      
    </div>

    <div class="mb-3">
      <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true, label: "Password Confirmation" %>    
    </div>

    <div class="d-flex justify-content-end mb-3">
      <%= form.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= link_to "Log in", new_user_session_path, class: "btn btn-link" %>
    <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link" %>
  </div>
</div>
