<div class="container mt-5">
  <div class="card mx-auto shadow-lg" style="max-width: 500px;">
    <div class="card-body">
      <h2 class="text-center mb-4">Sign up</h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, novalidate: true) do |form| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.email_field :email, autofocus: true, autocomplete: "email", required: true, label: "Email" %>
        </div>

        <div class="mb-3">
          <%= form.text_field :first_name, autocomplete: "given-name", required: true, label: "First Name" %>
        </div>

        <div class="mb-3">
          <%= form.text_field :last_name, autocomplete: "family-name", required: true, label: "Last Name" %>
        </div>

        <div class="mb-3">
          <%= form.text_field :title, autocomplete: "organization-title", required: true, label: "Title" %>
        </div>

        <div class="mb-3">
          <%= form.password_field :password, autocomplete: "new-password", required: true, label: "Password" %>
        </div>

        <div class="mb-3">
          <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true, label: "Password Confirmation" %>
        </div>

        <div class="d-flex justify-content-end mb-3">
          <%= form.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Log in", new_user_session_path, class: "btn btn-link p-0 text-primary" %>
        <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link p-0 text-primary" %>
      </div>
    </div>
  </div>
</div>
