<div class="centered-form">
  <h2>Log in</h2>

  <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true) do |form| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide an email.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide a password.
      </div>
    </div>

    <div class="form-check mb-3">
      <%= form.check_box :remember_me, class: "form-check-input" %>
      <%= form.label :remember_me, class: "form-check-label" %>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <%= form.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-link" %>
    <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link" %>
  </div>
</div>
