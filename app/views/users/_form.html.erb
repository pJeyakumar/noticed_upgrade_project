<%= form_with(model: user, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h4>
      <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a first name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a last name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :company, class: "form-label" %>
    <%= form.text_field :company, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Back to users", users_path, class: "btn btn-secondary me-3" %>
    <%= form.submit "Save User", class: "btn btn-primary" %>
  </div>
<% end %>
