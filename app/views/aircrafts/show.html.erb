<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card mb-3">
    <div class="card-body">
      <%= render @aircraft %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Edit this aircraft", edit_aircraft_path(@aircraft), class: "btn btn-primary me-2" %>
      <%= link_to "Back to aircrafts", aircrafts_path, class: "btn btn-secondary" %>
    </div>
    <%= button_to "Destroy this aircraft", @aircraft, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>